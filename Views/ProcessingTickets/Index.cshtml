@model IEnumerable<SeafoodApp.Models.ProcessingTicket>
@{
    ViewData["Title"] = "Danh sách phiếu chế biến";
}
<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Tạo phiếu chế biến</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Số phiếu</th>
            <th>Ngày</th>
            <th>LSX</th>
            <th>Công đoạn</th>
            <th>Bộ phận</th>
            <th>Nhân công</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Code</td>
                <td>@x.ProcessingDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@x.ProductionOrderId</td>
                <td>@x.ProcessStepId</td>
                <td>@x.Department</td>
                <td>@x.WorkerCount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Details" asp-route-id="@x.Id" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
