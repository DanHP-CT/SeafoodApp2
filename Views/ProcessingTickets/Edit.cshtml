@model SeafoodApp.Models.ProcessingTicket
@{
    ViewData["Title"] = "Sửa phiếu chế biến";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <!-- Các trường giống Create... -->
    <!-- ... -->
    <hr />
    <h4>Đầu vào</h4>
    <table class="table" id="tblInput">
        <thead>
            <tr><th>Tên</th><th>SL</th><th>Lô</th><th></th></tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.InputDetails.Count; i++)
            {
                <tr>
                    <td><input name="InputDetails[@i].MaterialName" value="@Model.InputDetails.ElementAt(i).MaterialName" class="form-control" /></td>
                    <td><input name="InputDetails[@i].Quantity" type="number" value="@Model.InputDetails.ElementAt(i).Quantity" class="form-control" /></td>
                    <td><input name="InputDetails[@i].BatchNumber" value="@Model.InputDetails.ElementAt(i).BatchNumber" class="form-control" /></td>
                    <td><button type="button" class="btn btn-danger" onclick="this.closest('tr').remove()">-</button></td>
                </tr>
            }
            <tr>
                <td colspan="4"><button type="button" class="btn btn-success" onclick="addInputRow(this)">Thêm</button></td>
            </tr>
        </tbody>
    </table>

    <h4>Đầu ra</h4>
    <table class="table" id="tblOutput">
        <thead><tr><th>Tên</th><th>SL</th><th>Lô</th><th></th></tr></thead>
        <tbody>
            @for (int i = 0; i < Model.OutputDetails.Count; i++)
            {
                <tr>
                    <td><input name="OutputDetails[@i].MaterialName" value="@Model.OutputDetails.ElementAt(i).MaterialName" class="form-control" /></td>
                    <td><input name="OutputDetails[@i].Quantity" type="number" value="@Model.OutputDetails.ElementAt(i).Quantity" class="form-control" /></td>
                    <td><input name="OutputDetails[@i].BatchNumber" value="@Model.OutputDetails.ElementAt(i).BatchNumber" class="form-control" /></td>
                    <td><button type="button" class="btn btn-danger" onclick="this.closest('tr').remove()">-</button></td>
                </tr>
            }
            <tr>
                <td colspan="4"><button type="button" class="btn btn-success" onclick="addOutputRow(this)">Thêm</button></td>
            </tr>
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

