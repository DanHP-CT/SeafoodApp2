@model SeafoodApp.Models.ProcessingTicket
@{
    ViewData["Title"] = $"Chi tiết phiếu #{Model.Code}";
}
<h2>@ViewData["Title"]</h2>

<p>
    <strong>Ngày:</strong> @Model.ProcessingDate.ToString("dd/MM/yyyy HH:mm")<br />
    <strong>LSX:</strong> @Model.ProductionOrderId<br />
    <strong>Công đoạn:</strong> @Model.ProcessStepId<br />
    <strong>Bộ phận:</strong> @Model.Department<br />
    <strong>Nhân công:</strong> @Model.WorkerCount<br />
    <strong>Thời gian:</strong> @Model.DurationHours giờ<br />
    <strong>Ghi chú:</strong> @Model.Note
</p>

<hr />
<h4>Đầu vào</h4>
<table class="table">
    <thead><tr><th>Tên</th><th>SL</th><th>Lô</th></tr></thead>
    <tbody>
        @foreach (var d in Model.InputDetails)
        {
            <tr>
                <td>@d.MaterialName</td>
                <td>@d.Quantity</td>
                <td>@d.BatchNumber</td>
            </tr>
        }
    </tbody>
</table>

<h4>Đầu ra</h4>
<table class="table">
    <thead><tr><th>Tên</th><th>SL</th><th>Lô</th></tr></thead>
    <tbody>
        @foreach (var d in Model.OutputDetails)
        {
            <tr>
                <td>@d.MaterialName</td>
                <td>@d.Quantity</td>
                <td>@d.BatchNumber</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
