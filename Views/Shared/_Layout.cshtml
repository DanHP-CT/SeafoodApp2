@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SeafoodApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">SeafoodApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Suppliers">Nhà cung cấp</a></li>
                    <li class="nav-item"><a class="nav-link" href="/PurchaseOrders">Phiếu mua</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ProductionOrders">Lệnh sản xuất</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ProcessingTickets">Phiếu chế biến</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ProcessSteps">Công đoạn</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ColdInventories">Kho lạnh</a></li>
                    <li class="nav-item"><a class="nav-link" href="/WageRates">Đơn giá lương</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Reports">Báo cáo</a></li>
                </ul>
                @* Nếu có đăng nhập, thêm block user/menu tại đây *@
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-2" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light text-center border-top">
        <div class="container">
            <span class="text-muted">SeafoodApp &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
