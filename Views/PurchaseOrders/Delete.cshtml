@model SeafoodApp.Models.PurchaseOrder
@{
    ViewData["Title"] = "Xóa phiếu " + Model.Code;
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Số phiếu</dt>
    <dd class="col-sm-10">@Model.Code</dd>

    <dt class="col-sm-2">Nhà cung cấp</dt>
    <dd class="col-sm-10">@Model.Supplier?.Name</dd>

    <dt class="col-sm-2">Ngày lập</dt>
    <dd class="col-sm-10">@Model.CreatedDate:dd/MM/yyyy</dd>

    <dt class="col-sm-2">Ngày cung cấp</dt>
    <dd class="col-sm-10">@Model.SupplyDate:dd/MM/yyyy</dd>
</dl>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
