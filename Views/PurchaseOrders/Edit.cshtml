@model SeafoodApp.Models.PurchaseOrder

@{
    ViewData["Title"] = "Sửa phiếu mua nguyên liệu";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Code" class="control-label">Số phiếu</label>
        <input asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SupplierId" class="control-label">Nhà cung cấp</label>
        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierList"></select>
    </div>
    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label">Ngày lập</label>
        <input asp-for="CreatedDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="SupplyDate" class="control-label">Ngày cung cấp</label>
        <input asp-for="SupplyDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Sản phẩm</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BatchNumber" class="control-label">Số lô</label>
        <input asp-for="BatchNumber" class="form-control" />
    </div>
    @* Chưa hỗ trợ sửa chi tiết động, chỉ sửa thông tin chung *@
    <div class="form-group mt-2">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
