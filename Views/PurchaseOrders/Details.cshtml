@model SeafoodApp.Models.PurchaseOrder
@{
    ViewData["Title"] = "Chi tiết phiếu #" + Model.Code;
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Nhà cung cấp</dt>
    <dd class="col-sm-10">@Model.Supplier?.Name</dd>
    <dt class="col-sm-2">Ngày lập</dt>
    <dd class="col-sm-10">@Model.CreatedDate:dd/MM/yyyy</dd>
    <dt class="col-sm-2">Ngày cung cấp</dt>
    <dd class="col-sm-10">@Model.SupplyDate:dd/MM/yyyy</dd>
    <dt class="col-sm-2">Tổng SL</dt>
    <dd class="col-sm-10">@Model.TotalQuantity:N0</dd>
    <dt class="col-sm-2">Tổng tiền</dt>
    <dd class="col-sm-10">@Model.TotalAmount:N0</dd>
</dl>

<h4>Chi tiết hàng hóa</h4>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lô</th>
            <th>Giá</th>
            <th>SL</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.Details)
        {
            <tr>
                <td>@d.ProductName</td>
                <td>@d.BatchNumber</td>
                <td>@d.Price:N0</td>
                <td>@d.Quantity:N2</td>
                <td>@d.Amount:N0</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
