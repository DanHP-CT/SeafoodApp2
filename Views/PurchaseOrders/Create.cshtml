@model SeafoodApp.Models.PurchaseOrder
@{
    ViewData["Title"] = "Tạo phiếu mua nguyên liệu";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Code" class="control-label">Số phiếu</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierId" class="control-label">Nhà cung cấp</label>
        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierList"></select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label">Ngày lập</label>
        <input asp-for="CreatedDate" class="form-control" type="date" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplyDate" class="control-label">Ngày cung cấp</label>
        <input asp-for="SupplyDate" class="form-control" type="date" />
        <span asp-validation-for="SupplyDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Sản phẩm</label>
        <input type="text" name="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Số lô</label>
        <input type="text" name="BatchNumber" class="form-control" />
    </div>

    <hr />
    <h4>Chi tiết</h4>
    <table class="table" id="detailTable">
        <thead>
            <tr>
                <th>Size</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input name="Details[0].Size" class="form-control" /></td>
                <td><input name="Details[0].UnitPrice" type="number" step="0.01" class="form-control" oninput="calcAmount(this)" /></td>
                <td><input name="Details[0].Quantity" type="number" class="form-control" oninput="calcAmount(this)" /></td>
                <td><input name="Details[0].Amount" class="form-control" readonly /></td>
                <td><button type="button" class="btn btn-success" onclick="addRow()">+</button></td>
            </tr>
        </tbody>
    </table>

    <div class="form-group mt-2">
        <input type="submit" value="Lưu phiếu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    <script>
        let idx = 1;
        function addRow() {
            let tbody = document.querySelector('#detailTable tbody');
            let tr = tbody.querySelector('tr').cloneNode(true);
            tr.querySelectorAll('input').forEach(input => {
                let name = input.getAttribute('name');
                if (name) {
                    let newName = name.replace(/\d+/, idx);
                    input.setAttribute('name', newName);
                    if (input.type !== "button" && input.type !== "submit") input.value = '';
                    if (input.hasAttribute('readonly')) input.value = '';
                }
            });
            tr.querySelector('button').onclick = function() { removeRow(this); };
            tr.querySelector('button').classList.remove('btn-success');
            tr.querySelector('button').classList.add('btn-danger');
            tr.querySelector('button').innerText = '-';
            tbody.appendChild(tr);
            idx++;
        }

        function removeRow(btn) {
            let tr = btn.closest('tr');
            let tbody = tr.parentNode;
            if (tbody.children.length > 1) tbody.removeChild(tr);
        }

        function calcAmount(input) {
            let tr = input.closest('tr');
            let price = parseFloat(tr.querySelector('input[name$=".UnitPrice"]').value) || 0;
            let qty = parseFloat(tr.querySelector('input[name$=".Quantity"]').value) || 0;
            tr.querySelector('input[name$=".Amount"]').value = (price * qty).toLocaleString('vi-VN');
        }
    </script>
}
