@model IEnumerable<SeafoodApp.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Danh sách phiếu mua nguyên liệu";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Số phiếu</th>
            <th>Nhà cung cấp</th>
            <th>Ngày lập</th>
            <th>Ngày cung cấp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Supplier?.Name</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@item.SupplyDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
